# Threadloaf Bot - API Token
DISCORD_TOKEN=your_discord_bot_token_here

# Comma-separated list of Discord guild/server IDs to monitor
GUILD_IDS=your_first_guild_id_here,your_second_guild_id_here

# Port for the HTTP API server
PORT=3000

# Threadloaf/Threadloaf Dev - JWT Secret
JWT_SECRET=your_jwt_signing_secret_here_change_this_in_production

# Threadloaf/Threadloaf Dev - OAuth2 Client ID
DISCORD_CLIENT_ID=your_oauth2_client_id_here

# Threadloaf/Threadloaf Dev - OAuth2 Client Secret
DISCORD_CLIENT_SECRET=your_oauth2_client_secret_here

# `https://api.threadloaf.com/auth/callback` or `http://localhost:3000/auth/callback`
DISCORD_REDIRECT_URI=http://localhost:3000/auth/callback

# Testing mode - when set to "true", disables token validation (any token is accepted)
TESTING_MODE=false
