# Threadloaf Bot - API Token
DISCORD_TOKEN=your_discord_bot_token_here

# Comma-separated list of Discord guild/server IDs to monitor
GUILD_IDS=your_first_guild_id_here,your_second_guild_id_here

# Port for the HTTP API server
PORT=3000

# Threadloaf/Threadloaf Dev - JWT Secret
JWT_SECRET=your_jwt_signing_secret_here_change_this_in_production

# Threadloaf/Threadloaf Dev - OAuth2 Client ID
DISCORD_CLIENT_ID=your_oauth2_client_id_here

# Threadloaf/Threadloaf Dev - OAuth2 Client Secret
DISCORD_CLIENT_SECRET=your_oauth2_client_secret_here

# `https://api.threadloaf.com/auth/callback` or `http://localhost:3000/auth/callback`
DISCORD_REDIRECT_URI=http://localhost:3000/auth/callback

# Testing mode - when set to "true", disables token validation (any token is accepted)
TESTING_MODE=false

# Let's Encrypt Configuration
# Enable Let's Encrypt support (production only, disabled in debug mode)
LETS_ENCRYPT_ENABLED=false

# Let's Encrypt email for account registration and notifications
LETS_ENCRYPT_EMAIL=admin@threadloaf.com

# Domain for Let's Encrypt certificate (used in production)
LETS_ENCRYPT_DOMAIN=api.threadloaf.com

# Let's Encrypt ACME server directory URL
# Production: https://acme-v02.api.letsencrypt.org/directory
# Staging: https://acme-staging-v02.api.letsencrypt.org/directory
LETS_ENCRYPT_ACME_DIRECTORY=https://acme-staging-v02.api.letsencrypt.org/directory

# Directory to store Let's Encrypt certificates and account keys
LETS_ENCRYPT_CERTS_DIR=/mnt/efs-letsencrypt
