{
    "manifest_version": 3,
    "name": "Threadweaver",
    "version": "1.0",
    "description": "Enhances Discord's thread view",
    "permissions": [],
    "content_scripts": [
      {
        "matches": ["*://discord.com/*"],
        "js": ["dist/content_script.js"]
      }
    ],
    "web_accessible_resources": [{
      "resources": ["styles.css"],
      "matches": ["*://discord.com/*"]
    }]
  }
  